<h3>1.アップロードする画像を選択</h3>
  <% if user_signed_in? %>
    <p>Logged in as <%= current_user.username %></p>
  <% else %>
    <%= link_to 'Login with twitter', user_omniauth_authorize_path(provider: :twitter) %>
  <% end %>

  <%= form_for @created_picture, html: { class: 'form created_picture-form' } do |f| %>
    <div class = "field">
      <%= f.file_field :uploaded_url %>
    </div>

  <h3>2.合成先の画像を選択</h3>
    <%= f.hidden_field :base_picture_id %>

  <div id="bxslider">
    <% @base_pictures.each do |picture| %>
      <div><%= image_tag picture.url, class: 'select', width: '200', 'data-id' => picture.id %></div>
    <% end %>
  </div>
  <div class="align center">
    <img id="selected" src="img1.jpg" width="400">
    <!-- <img id="hovering" width="400">-->
  </div>
  <%= f.submit "合成" %>
<% end %>
